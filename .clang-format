# .clang-format

Language: Cpp
BasedOnStyle: Google
IndentWidth: 4
AccessModifierOffset: -4
ColumnLimit: 100

AllowShortFunctionsOnASingleLine: None
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false


IncludeCategories:
  - Regex:           '^<Eigen/.*>'
    Priority:        2
  - Regex:           '^<opencv2/.*>'
    Priority:        3
  - Regex:           '^<spdlog/.*>'
    Priority:        4
  - Regex:           '^<slam/.*>'
    Priority:        5
  - Regex:           '^<.*'
    Priority:        1
